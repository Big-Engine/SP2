	//------------------------------------------------------------
	
	void State_Idle_Enter()
	{
		mpMover.SetSpeedState(eGruntAgentSpeed_Walk);
		mpStateMachine.ChangeState(eGruntAgentState_Wait);
		cLux_AddDebugMessage("[agent] " + mBaseObj.GetName() + " > Entered Idle State");
		AddAmbientMusic();
	}
	
