		pCharBody.SetMaxPositiveMoveSpeed(eCharDir_Forward,1.0f);
		pCharBody.SetMoveSpeedMul(eCharDir_Forward,1);
		pCharBody.SetMoveAcc(eCharDir_Forward,4);
