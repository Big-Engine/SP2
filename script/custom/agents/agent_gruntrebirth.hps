	{
		cScrAgentHumanoid::SetupAfterLoad(apWorld, apVars, apInstanceVars);
		
		///////////////
		// Custom Senses
		mfSightMul = apInstanceVars.GetVarFloat("SightMul",1.0f);
		mfHearingMul = apInstanceVars.GetVarFloat("HearingMul",1.0f);
